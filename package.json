{
  "name": "mcp-drupal-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Drupal CMS",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint && npm run type-check",
    "prestart": "npm run build",
    "validate": "npm run lint && npm run type-check && npm run test",
    "setup": "cp .env.example .env && npm install",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "keywords": ["mcp", "drupal", "cms", "model-context-protocol"],
  "author": "Vincent Tournaud",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "better-npm-audit": "^3.7.3"
  }
}